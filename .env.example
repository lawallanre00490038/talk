# .env.example
PROJECT_NAME="LagTALK API"
API_V1_STR="/api/v1"

# !! GENERATE A STRONG SECRET KEY !!
# openssl rand -hex 32
SECRET_KEY=your_super_secret_key_here 
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440 # 24 hours

# PostgreSQL
POSTGRES_SERVER=postgres
POSTGRES_USER=lagtalk
POSTGRES_PASSWORD=lagtalk_password
POSTGRES_DB=lagtalk
DATABASE_URL="postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_SERVER}:5432/${POSTGRES_DB}"

# CORS Origins
BACKEND_CORS_ORIGINS=["http://localhost:3000"]

# MinIO (S3)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY_ID=${MINIO_ROOT_USER}
S3_SECRET_ACCESS_KEY=${MINIO_ROOT_PASSWORD}
S3_BUCKET_NAME=lagtalk-media

# Redis (for Rate Limiting - not fully implemented in code yet, but setup is ready)
REDIS_URL="redis://localhost:6379"

# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=grafana